{% extends 'base.twig' %}

{% block content %}
	<div id="fitting_tool_intro">
		<div class="container">
			<div class="title_row row">
				<div class="col-12">
					<small>KBS Support</small>
					<h1>
						FAQs
					</h1>
					<h2>
						Frequently Asked Questions
					</h2>
				</div>
			</div>

			<div class="content row">
				<div class="mobile_menu col-12">
					<h4 class="dropdown_click">
						<i class="fa-solid fa-caret-down"></i>
						Quick Links
					</h4>

					<div class="mobile-dropdown closed" id="nav-tab" role="tablist">
						{# for each topic create a button #}
						{% for key, value in topics %}
							<button class="{{ key == 0 ? 'active' : '' }}"
								id="nav-home-tab-{{ key }}"
								data-bs-toggle="tab"
								data-bs-target="#nav-faq-{{ key }}"
								type="button"
								role="tab"
								aria-controls="nav-home"
								aria-selected="true">
								{{ value.topic_title }}
							</button>
						{% endfor %}
					</div>
				</div>

				<div class="col-lg-3 side-bar hide-mobile">
					<h4>
						Quick Links
					</h4>

					<div class="" id="nav-tab" role="tablist">
						{% for key, value in topics %}
							<button class="{{ key == 0 ? 'active' : '' }}"
								id="nav-home-tab-{{ key }}"
								data-bs-toggle="tab"
								data-bs-target="#nav-faq-{{ key }}"
								type="button"
								role="tab"
								aria-controls="nav-home"
								aria-selected="true">
								{{ value.topic_title }}
							</button>
						{% endfor %}
					</div>
				</div>
				<div class="col-lg-9 content-col">
					<div class="tab-content" id="nav-tabContent">
						{% for key, value in topics %}
							<div class="tab-pane fade {{ key == 0 ? 'show active' : '' }}"
								id="nav-faq-{{ key }}"
								role="tabpanel"
								aria-labelledby="nav-home-tab"
								tabindex="0">
								{% for item in value.faq %}
									<div class="content_box">
										<h4 class="title">
											{{ item.question }}
										</h4>

										<div class="copy">
											{{ item.answer }}
										</div>
									</div>
								{% endfor %}
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
